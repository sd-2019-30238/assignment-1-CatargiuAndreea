package Assignment1;
import java.awt.EventQueue;
import javax.swing.*;
import java.awt.*;

public class GUILogInCustomer {
	private JFrame frame;
	private JButton user;
	private JTextField pass;
	private JButton borrow;
	//private JLabel userL;
	//private JLabel password;
	private JButton ok;
	
	public GUILogInCustomer(){
		frame = new JFrame("USER");
		
		
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(500,300);
		frame.setLayout(null);
	
		borrow = new JButton("Borrow books");
		//userL = new JLabel("USER: ", JLabel.RIGHT);
		//password = new JLabel("PASSWORD: ", JLabel.RIGHT);
		user = new JButton("Return books");
		pass = new JTextField("Your password");
		ok = new JButton("OK");
		
		borrow.setBounds(160,20,150,30);
		//userL.setBounds(60,80,50,50);
		user.setBounds(120, 90, 150, 30);
		//password.setBounds(10, 130, 100, 50);
		pass.setBounds(120, 140, 100, 30);
		ok.setBounds(150, 190, 100,40);
		
		//frame.add(userL);
		frame.add(borrow);
		//frame.add(password);
		frame.add(user);
		frame.add(pass);
		frame.add(ok);
		frame.setVisible(true);
	}
}
