package Assignment1;
import java.awt.EventQueue;
import javax.swing.*;
import java.awt.*;


public class GUICreateAcc {
	private JFrame frame;
	private JTextField user;
	private JTextField pass;
	private JButton CreateButton;
	private JLabel userL;
	private JLabel password;
	private JLabel payment;
	
	public GUICreateAcc(){
		frame = new JFrame("CREATE ACCOUNT");
		
		
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(600,300);
		frame.setLayout(null);
	
		CreateButton = new JButton("Create Account");
		userL = new JLabel("Set username: ", JLabel.RIGHT);
		password = new JLabel("Set password: ", JLabel.RIGHT);
		payment = new JLabel("Set Payment:", JLabel.RIGHT);
		user = new JTextField("    ");
		pass = new JTextField("    ");
		
		CreateButton.setBounds(160,20,150,50);
		userL.setBounds(60,80,50,50);
		user.setBounds(120, 80, 100, 50);
		password.setBounds(10, 130, 100, 50);
		pass.setBounds(120, 130, 100, 50);
		payment.setBounds(0, 150, 100,100);
		
		
		frame.add(userL);
		frame.add(CreateButton);
		frame.add(password);
		frame.add(user);
		frame.add(pass);
		frame.add(payment);
		frame.setVisible(true);
		
	}
}
